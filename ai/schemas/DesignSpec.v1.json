{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ai/schemas/DesignSpec.v1.json",
  "title": "DesignSpec.v1",
  "description": "High-level UI/UX design specification capturing tokens, components, states, and accessibility goals.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "source": { "type": "string", "description": "inspiration|research|fallback" },
    "tokens": {
      "type": "object",
      "properties": {
        "colors": { "type": "object", "additionalProperties": { "type": "string" } },
        "spacing": { "type": "object", "additionalProperties": { "type": "string" } },
        "typography": { "type": "object", "additionalProperties": { "type": "string" } },
        "radius": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "states": { "type": "array", "items": { "type": "string" } },
          "props": { "type": "object", "additionalProperties": true },
          "a11y": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["name"]
      }
    },
    "a11yGoals": { "type": "array", "items": { "type": "string" } },
    "notes": { "type": "string" }
  },
  "required": ["tokens", "components"],
  "additionalProperties": false
}

