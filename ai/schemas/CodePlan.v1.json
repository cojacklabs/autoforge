{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ai/schemas/CodePlan.v1.json",
  "title": "CodePlan.v1",
  "description": "Contract-first plan describing intended code changes, rationale, and acceptance hooks before codegen.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "user_ask_id": { "type": "string" },
    "goals": { "type": "array", "items": { "type": "string" } },
    "strategy": { "type": "string", "description": "High-level approach to achieving goals with minimal diffs." },
    "impacted_areas": { "type": "array", "items": { "type": "string" } },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["add", "modify", "delete", "refactor", "generate"] },
          "path": { "type": "string", "description": "Target file path (relative to repo)." },
          "symbol": { "type": "string", "description": "Optional function/class/component symbol for granular intent." },
          "description": { "type": "string" },
          "rationale": { "type": "string" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "acceptance_tests": { "type": "array", "items": { "type": "string" }, "description": "IDs of TestPlan cases covering this change." },
          "risk_level": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" }
        },
        "required": ["type", "path", "description"]
      }
    },
    "non_goals": { "type": "array", "items": { "type": "string" } },
    "rollback_plan": { "type": "string" },
    "metrics": {
      "type": "object",
      "description": "Expected impact on metrics (perf, accessibility, bundle size).",
      "additionalProperties": true
    },
    "links": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["goals", "changes"],
  "additionalProperties": false
}

